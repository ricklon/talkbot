{
  "id": "timer_flow",
  "name": "Timer Set/List/Cancel Flow",
  "description": "3-turn flow: set a named timer, list active timers, cancel by name.",
  "tags": ["timers", "tools", "multi-turn"],
  "turns": [
    {
      "turn": 1,
      "text": "Set a timer for 5 minutes called pasta.",
      "expects": {
        "tool_calls": ["set_timer"],
        "answer_contains": ["5"]
      }
    },
    {
      "turn": 2,
      "text": "What timers do I have running?",
      "expects": {
        "tool_calls": ["list_timers"],
        "answer_contains": ["pasta"]
      }
    },
    {
      "turn": 3,
      "text": "Cancel the pasta timer.",
      "expects": {
        "tool_calls": ["cancel_timer"],
        "answer_contains": ["cancel"]
      }
    }
  ]
}
